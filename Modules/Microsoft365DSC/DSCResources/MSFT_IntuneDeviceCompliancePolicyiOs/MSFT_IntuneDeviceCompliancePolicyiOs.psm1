        $PasscodeMinutesOfInactivityBeforeLock,

        [Parameter()]
        [System.Int64]
        $PasscodePreviousPasscodeBlockCount,

        [Parameter()]
        [System.Int64]
        $PasscodeMinimumCharacterSetCount,

        [Parameter()]
        [System.String]
        $PasscodeRequiredType,

        [Parameter()]
        [System.Boolean]
        $PasscodeRequired,

